<?xml version="1.0"?>
<config>
    <modules>
        <Openobject_ooconnector>
            <version>0.0.1</version>
        </Openobject_ooconnector>
    </modules>
    <frontend>
        <routers>
            <ooconnector>
                <use>standard</use>
                <args>
                    <module>Openobject_ooconnector</module>
                    <frontName>ooconnector</frontName>
                </args>
            </ooconnector>
        </routers>
    </frontend>
    <global>
        <models>
            <ooconnector>
                <class>Openobject_ooconnector_Model</class>
            </ooconnector>
            <sales>
                <rewrite>
                    <order_api>Openobject_ooconnector_Model_Sales_Order_Api</order_api>
		    
<order_invoice_api>Openobject_ooconnector_Model_Sales_Order_Invoice_Api</order_invoice_api>
		    
<order_shipment_api>Openobject_ooconnector_Model_Sales_Order_Shipment_Api</order_shipment_api>
                </rewrite>
            </sales>
            <catalog>
                <rewrite>
                    <product_api>Openobject_ooconnector_Model_Catalog_Product_Api</product_api>
                </rewrite>
            </catalog>
        </models>
        <resources>
            <ooconnector_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ooconnector_write>
            <ooconnector_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ooconnector_read>
        </resources>
        <blocks>
            <ooconnector>
                <class>Openobject_ooconnector_Block</class>
            </ooconnector>
        </blocks>
        <helpers>
            <ooconnector>
                <class>Openobject_ooconnector_Helper</class>
            </ooconnector>
        </helpers>
        <events>
            <sales_order_place_after>
                <observers>
                    <init_imported_after_place_order>
                        <type>singleton</type>
                        <class>ooconnector/observer</class>
                        <method>initImported</method>
                    </init_imported_after_place_order>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
    <admin>
        <routers>
            <ooconnector>
                <use>admin</use>
                <args>
                    <module>Openobject_ooconnector</module>
                    <frontName>connector</frontName>
                </args>
            </ooconnector>
        </routers>
    </admin>
</config>
